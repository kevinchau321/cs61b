# Source the class master version of .login
[[ -z ${MASTER} ]] && export MASTER=${USER%-*}
[[ -z ${MASTERDIR} ]] && export MASTERDIR=$(eval echo ~${MASTER})

[[ -e ${MASTERDIR}/adm/class.login ]] && . ${MASTERDIR}/adm/class.login
